<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/greyblack"
    tools:context="com.example.pedro.promediodenotas.Correo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Correo Electronico"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/et_to"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Ingresar gmail-id"
                android:textColor="@color/white"
                android:textColorHint="@color/yello"
                android:theme="@style/CampoTextoAmarillo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Asunto"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/et_sub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Ingresar Asunto"
                android:textColor="@color/white"
                android:textColorHint="@color/yello"
                android:theme="@style/CampoTextoAmarillo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="Mensaje (Reporte)"
                android:textSize="20dp"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/et_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textMultiLine"
                android:editable="false"
                android:enabled="false"
                android:textColor="@color/white"
                android:theme="@style/CampoTextoAmarillo"/>

            <Button
                android:id="@+id/btnEnviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:background="@drawable/buttomstyle"
                android:text="Enviar Correo"
                android:textColor="@color/white" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
